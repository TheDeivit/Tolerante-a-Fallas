#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <string>
#include <conio.h>
#include <iomanip>
using namespace std;

int main()
{
    int opc;  // opcion
    lr = sizeof(struct registro);
    le = sizeof(struct encabezado);

    do
    {
        system("cls");
        cout<<"-------------------------------"<<endl;
        cout<<"        Menu Principal"<<endl;
        cout<<"-------------------------------"<<endl;
        cout<<"1.- Escribir nuevo estudiante"<<endl;
        cout<<"2.- Mostrar estudiantes"<<endl;
        cout<<"3.- Insertar otro estudiante"<<endl;
        cout<<"4.- Buscar estudiante"<<endl;
        cout<<"5.- Salir del programa"<<endl;
        cout<<"Elige tu opcion: ";
        cin>>opc;

        switch(opc)
        {
            case 1:
            	system("cls");
                Escribir();
                system("pause");
				break;
            case 2:
            	system("cls");
                Mostrar();
				system("pause");
				break;
			case 3:
            	system("cls");
                Insertar();
				system("pause");
				break;
            case 4:
            	system("cls");
                Buscar();
				system("pause");
				break;
            case 5:
                cout<<"Ha elegido la opcion de salir..."<<endl;
        }

    }while(opc != 5);

    return 0;
}
